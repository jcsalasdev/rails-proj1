<div class='form-container'>
  <div class='form-wrapper'>
  <%= form_with(model: manga) do |form| %>
    <% if manga.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(manga.errors.count, "error") %> prohibited this manga from being saved:</h2>

        <ul>
          <% manga.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='form-data'>
      <%= form.label :title, class: 'label' %>
      <%= form.text_field :title, class: 'input'  %>
      <%= form.label :summary, class: 'label' %>
      <%= form.text_area :summary, :rows => 10 , class: 'input' %>
      <%= form.label :vcode, class: 'label' %>
      <%= form.text_field :vcode, class: 'input'  %>
      <div class="actions">
        <%= form.submit(class: 'create') %>
      </div>
    </div>
  <% end %>
  <%= link_to 'Back', mangas_path %>
  </div>
</div>

